<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="320.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="expenses_tracker.AddExpenseController">
    <children>
      <HBox>
         <children>
              <Label text="Adicionar despesa">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox spacing="8.0">
         <children>
            <VBox spacing="4.0">
               <children>
                  <Label text="Valor:" />
                  <TextField fx:id="valueField" promptText="Valor da despesa" />
               </children>
            </VBox>
            <VBox spacing="4.0">
               <children>
                  <Label text="Descrição:" />
                  <TextField fx:id="descriptionField" promptText="Descrição da despesa" />
               </children>
            </VBox>
            <VBox spacing="4.0">
               <children>
                  <Label text="Data" />
                  <DatePicker fx:id="dateField" promptText="Data da despesa" />
               </children>
            </VBox>
            <VBox spacing="4.0">
               <children>
                  <Label text="Data" />
                  <ComboBox fx:id="categorySelect" promptText="Categoria da despesa" />
               </children>
            </VBox>
         </children>
      </VBox>
      <HBox alignment="TOP_RIGHT" spacing="4.0">
         <children>
              <Button fx:id="backButton" onAction="#onBackButtonAction" text="Voltar" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonAction" text="Salvar" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
